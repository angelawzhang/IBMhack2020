{
    "manifest_version": 2,
    "name": "ShopBlack",
    "version": "1.0",
    
    "description": "An extension to help you shop at Black owned alternatives!",

    "icons": {  "16": "images/logo-16.png",
                "48": "images/logo-48.png",
                "128": "images/logo-128.png" },


    "permissions": ["declarativeContent", "storage", "tabs"],

    "background": {
        "scripts": ["scripts/background.js"],
        "persistent": false
    },

    "page_action": {
        "default_popup": "html/popup.html",
        "default_icon": {
            "16": "images/logo-16.png",
            "48": "images/logo-48.png",
            "128": "images/logo-128.png"
        }
    }
}